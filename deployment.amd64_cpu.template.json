{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "aiotdevopsacr": {
                "username": "${ACR_UNAME}",
                "password": "${ACR_PWD}",
                "address": "${ACR_ADDR}"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.2.6-linux-amd64",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.2.6-linux-amd64",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "Mfg_Vision_CIS_Camera_1": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.Mfg_Vision_CIS_Camera_1}",
              "createOptions": {
                "NetworkingConfig": {
                  "EndpointsConfig": {
                    "host": {}
                  }
                },
                "HostConfig": {
                  "IpcMode": "host",
                  "NetworkMode": "host",
                  "Binds": [
                    "/home/<your user id>/edge_assets/frame_volume:/frame_volume",
                    "/home/<your user id>/edge_assets/annotated_frame_volume:/annotated_frame_volume",
                    "/home/<your user id>/edge_assets/retrain_frame_volume:/retrain_frame_volume",
                    "/home/<your user id>/edge_assets/model_volume:/model_volume",
                    "/home/<your user id>/edge_assets/image_sink_volume:/image_sink_volume"
                  ],
                  "Mounts": [
                    {
                      "Type": "volume",
                      "Source": "frame_volume",
                      "Target": "/var/opt/frame_volume",
                      "RW": true,
                      "Propagation": "rprivate"
                    },
                    {
                      "Type": "volume",
                      "Source": "annotated_frame_volume",
                      "Target": "/var/opt/annotated_frame_volume",
                      "RW": true,
                      "Propagation": "rprivate"
                    },
                    {
                      "Type": "volume",
                      "Source": "retrain_frame_volume",
                      "Target": "/var/opt/retrain_frame_volume",
                      "RW": true,
                      "Propagation": "rprivate"
                    },
                    {
                      "Type": "volume",
                      "Source": "model_volume",
                      "Target": "/var/opt/model_volume",
                      "RW": true,
                      "Propagation": "rprivate"
                    },
                    {
                      "Type": "volume",
                      "Source": "image_sink_volume",
                      "Target": "/var/opt/image_sink_volume",
                      "RW": true,
                      "Propagation": "rprivate"
                    }
                  ]
                }
              }
            },
            "env": {
              "CAMERA_GVSP_ALLIED": {
                "value": "false"
              },
              "CAMERA_GVSP_BASLER": {
                "value": "false"
              },
              "CAMERA_RTSP": {
                "value": "true"
              },
              "CAMERA_FILE": {
                "value": "false"
              },
              "CAMERA_ID": {
                "value": "<your camera name>"
              },
              "CAMERA_TRIGGER": {
                "value": "true"
              },
              "CAMERA_URI": {
                "value": "<your camera uri>"
              },
              "CAMERA_LOCATION": {
                "value": "<your camera location>"
              },
              "CAMERA_POSITION": {
                "value": "<your camera position>"
              },
              "CAMERA_FPS": {
                "value": "25"
              },
              "INFERENCE_FPS": {
                "value": "10"
              },
              "MODEL_ACV": {
                "value": "true"
              },
              "MODEL_FILE": {
                "value": "acv_model_sample_416.onnx"
              },
              "LABEL_FILE": {
                "value": "acv_label_sample.txt"
              },
              "TARGET_DIM": {
                "value": "416"
              },
              "PROB_THRES": {
                "value": ".5"
              },
              "IOU_THRES": {
                "value": ".45"
              },
              "RETRAIN_INTERVAL": {
                "value": "500"
              },
              "STORE_RAW_FRAMES": {
                "value": "true"
              },
              "STORE_ALL_INFERENCES": {
                "value": "true"
              },
              "MSSQL_DB": {
                "value": "DefectDB"
              },
              "MSSQL_PWD": {
                "value": "<your strong pwd>"
              }
            }
          },
          "Mfg_Vision_Model_Repo": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.Mfg_Vision_Model_Repo}",
              "createOptions": {
                "HostConfig": {
                  "Binds": [
                    "/home/<your user id>/edge_assets/model_volume:/model_volume"
                  ]
                },
                "Mounts": [
                  {
                    "Type": "volume",
                    "Source": "model_volume",
                    "Target": "/var/opt/model_volume",
                    "RW": true,
                    "Propagation": "rprivate"
                  }
                ]
              }
            }
          },
          "Mfg_Vision_Image_Upload": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.Mfg_Vision_Image_Upload}",
              "createOptions": {
                "NetworkingConfig": {
                  "EndpointsConfig": {
                    "host": {}
                  }
                },
                "HostConfig": {
                  "NetworkMode": "host",
                  "Binds": [
                    "/home/<your user id>/edge_assets/frame_volume:/frame_volume",
                    "/home/<your user id>/edge_assets/annotated_frame_volume:/annotated_frame_volume",
                    "/home/<your user id>/edge_assets/retrain_frame_volume:/retrain_frame_volume"
                  ],
                  "Mounts": [
                    {
                      "Type": "volume",
                      "Source": "frame_volume",
                      "Target": "/var/opt/frame_volume",
                      "RW": true,
                      "Propagation": "rprivate"
                    },
                    {
                      "Type": "volume",
                      "Source": "annotated_frame_volume",
                      "Target": "/var/opt/annotated_frame_volume",
                      "RW": true,
                      "Propagation": "rprivate"
                    },
                    {
                      "Type": "volume",
                      "Source": "retrain_frame_volume",
                      "Target": "/var/opt/retrain_frame_volume",
                      "RW": true,
                      "Propagation": "rprivate"
                    }
                  ]
                }
              }
            },
            "env": {
              "ADL_G2": {
                "value": "false"
              },
              "STORE_CONN_STR": {
                "value": "${BLOB_CONN_STR}"
              }
            }
          },
          "Mfg_Vision_Image_Cleanup": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.Mfg_Vision_Image_Cleanup}",
              "createOptions": {
                "NetworkingConfig": {
                  "EndpointsConfig": {
                    "host": {}
                  }
                },
                "HostConfig": {
                  "NetworkMode": "host",
                  "Binds": [
                    "/home/<your user id>/edge_assets/frame_volume:/frame_volume",
                    "/home/<your user id>/edge_assets/annotated_frame_volume:/annotated_frame_volume",
                    "/home/<your user id>/edge_assets/retrain_frame_volume:/retrain_frame_volume"
                  ],
                  "Mounts": [
                    {
                      "Type": "volume",
                      "Source": "frame_volume",
                      "Target": "/var/opt/frame_volume",
                      "RW": true,
                      "Propagation": "rprivate"
                    },
                    {
                      "Type": "volume",
                      "Source": "annotated_frame_volume",
                      "Target": "/var/opt/annotated_frame_volume",
                      "RW": true,
                      "Propagation": "rprivate"
                    },
                    {
                      "Type": "volume",
                      "Source": "retrain_frame_volume",
                      "Target": "/var/opt/retrain_frame_volume",
                      "RW": true,
                      "Propagation": "rprivate"
                    }
                  ]
                }
              }
            },
            "env": {
              "RETENTION_POLICY_SECONDS": {
                "value": "3600"
              }
            }
          },
          "SQL_on_Edge": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azure-sql-edge/developer:latest",
              "createOptions": {
                "NetworkingConfig": {
                  "EndpointsConfig": {
                    "host": {}
                  }
                },
                "HostConfig": {
                  "NetworkMode": "host",
                  "CapAdd": [
                    "SYS_PTRACE"
                  ],
                  "Binds": [
                    "sqlvol10:/sqlvol10"
                  ],
                  "PortBindings": {
                    "1433/tcp": [
                      {
                        "HostPort": "1433"
                      }
                    ]
                  },
                  "Mounts": [
                    {
                      "Type": "volume",
                      "Source": "sqlvol10",
                      "Target": "/var/opt/mssql"
                    }
                  ]
                },
                "Env": [
                  "MSSQL_AGENT_ENABLED=TRUE",
                  "ClientTransportType=AMQP_TCP_Only",
                  "PlanId=asde-developer-on-iot-edge"
                ]
              }
            },
            "env": {
              "ACCEPT_EULA": {
                "value": "Y"
              },
              "MSSQL_SA_PASSWORD": {
                "value": "<your strong pwd>"
              },
              "MSSQL_LCID": {
                "value": "1033"
              },
              "MSSQL_COLLATION": {
                "value": "SQL_Latin1_General_CP1_CI_AS"
              }
            }
          },
          "Mfg_Vision_Grafana_Dashboard": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.Mfg_Vision_Grafana_Dashboard}",
              "createOptions": {
                "Env": [
                  "GF_SECURITY_ADMIN_PASSWORD=Pa$$word321"
                ],
                "NetworkingConfig": {
                  "EndpointsConfig": {
                    "host": {}
                  }
                },
                "Volumes": {
                  "/etc/grafana/provisioning": {}
                },
                "HostConfig": {
                  "PortBindings": {
                    "3000/tcp": [
                      {
                        "HostPort": "3000"
                      }
                    ]
                  },
                  "NetworkMode": "host",
                  "Binds": [
                    "/home/<your user id>/edge_assets/frame_volume:/usr/share/grafana/public/raw-img",
                    "/home/<your user id>/edge_assets/annotated_frame_volume:/usr/share/grafana/public/annotated-img"
                  ],
                  "Mounts": [
                    {
                      "Type": "volume",
                      "Source": "frame_volume",
                      "Target": "/var/opt/frame_volume",
                      "RW": true,
                      "Propagation": "rprivate"
                    },
                    {
                      "Type": "volume",
                      "Source": "annotated_frame_volume",
                      "Target": "/var/opt/annotated_frame_volume",
                      "RW": true,
                      "Propagation": "rprivate"
                    }
                  ]
                }
              }
            },
            "env": {
              "GF_SERVER_PROTOCOL": {
                "value": "http"
              },
              "GF_DASHBOARDS_MIN_REFRESH_INTERVAL": {
                "value": "100ms"
              },
              "GF_DOMAIN": {
                "value": "localhost"
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "routes": {
          "Mfg_Vision_CIS_Camera_1_Inference_Upload": "FROM /messages/modules/Mfg_Vision_CIS_Camera_1/outputs/outputInference INTO $upstream",
          "Mfg_Vision_CIS_Camera_1_Retraing_Upload": "FROM /messages/modules/Mfg_Vision_CIS_Camera_1/outputs/outputRetrainingSend INTO BrokeredEndpoint(\"/modules/Mfg_Vision_Image_Upload/inputs/inputRetrainingSend\")",
          "Mfg_Vision_CIS_Camera_1_Annotated_Upload": "FROM /messages/modules/Mfg_Vision_CIS_Camera_1/outputs/outputAnnotatedSend INTO BrokeredEndpoint(\"/modules/Mfg_Vision_Image_Upload/inputs/inputAnnotatedSend\")",
          "Mfg_Vision_CIS_Camera_1_Frame_Upload": "FROM /messages/modules/Mfg_Vision_CIS_Camera_1/outputs/outputFrameSend INTO BrokeredEndpoint(\"/modules/Mfg_Vision_Image_Upload/inputs/inputFrameSend\")"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}

"HostConfig": {
  "IpcMode": "host",
  "gpus": 0,
  "runtime": "nvidia",
  "NetworkMode": "host",